<?xml version="1.0"?>
<ruleset name="Money">
    <description>The coding standard of WeDev/Money package</description>
    <arg value="p" />
    <exclude-pattern>/tests/*</exclude-pattern>

    <config name="ignore_warnings_on_exit" value="1" />
    <config name="ignore_errors_on_exit" value="1" />

    <arg name="colors" />
    <arg value="s" />

    <!-- Use the PSR2 Standard-->
    <rule ref="PSR2" />
</ruleset>
